<mvc:View
    controllerName="sapbtp.controller.BookDetails"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page id="bookDetailsPage" title="{title}">
        <content>
            <VBox id="_IDGenVBox" class="bookDetailsContainer" alignItems="Center" justifyContent="Center">
                <Image id="bookImage" src="{imageUrl}" width="200px" height="300px" class="bookImage"/>
                <Title id="bookTitle" text="{title}" class="bookTitle"/>
                <Text id="bookAuthor" text="by {author}" class="bookAuthor"/>
                <Text id="bookStock" text="{= 'Stock: ' + ${stock}}" class="bookStock"/>
                
             
                <HBox id="_IDGenHBox4" alignItems="Center">
                    <RatingIndicator id="bookRating" value="{= ${avgRating} / 2 }" maxValue="5" enabled="false" class="customRating"/>
                    <Text id="ratingValue" text="{= '(' + ${avgRating} + ')' }" class="ratingText"/>
                </HBox>

            
                <HBox id="actionButtons" justifyContent="SpaceAround" width="100%">
                    <Button id="wishlistButton1" icon="sap-icon://heart" type="Emphasized" text="Add to Wishlist" press="onAddToWishlist"/>
                    <Button id="cartButton1" icon="sap-icon://cart" type="Emphasized" text="Add to Cart" press="onAddToCart"/>
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
